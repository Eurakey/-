<!--index.wxml-->
<view class="container">
    <view class="list-header">
        <text>课程列表</text>
        <switch checked="{{ isHighlight }}" bindchange="onHightlightChange"></switch>
    </view>
    <view class="list-group">
        <view class="list-group-item" wx:for="{{ classes }}" wx:key="index">
            <view class="header">
                <text class="title {{item.price<=7500&&isHighlight?'cheap':''}}">{{ item.name }}</text>
                <text class="price">{{ item.price / 100 }} 元</text>
            </view>
            <text class="desc">{{ item.description }}</text>
        </view>
    </view>
    <view class="pagination">总页数 {{ totalPage }} 当前页数 {{ curPage }}</view>
    <picker class="picker" value="{{ pageSize }}" range="{{ pageSizeArray }}" bindchange="onPageSizeChange" wx:if="{{totalPage!=1}}">
        每页 {{ pageSize }} 条数据
    </picker>
    <view class="buttons">
        <button disabled="{{curPage===1}}" bindtap="onPrevTap" wx:if="{{totalPage!=1}}">上一页</button>
        <button disabled="{{curPage===totalPage}}" bindtap="onNextTap" wx:if="{{totalPage!=1}}">下一页</button>
    </view>
</view>